<h2>登录</h2>

<div class="hero-unit">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'form-horizontal' }) do |f| %>
  <div class="control-group">
    <label class="control-label"><%= f.label :email %></label>
    <div class="controls">
      <%= f.email_field :email %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label"><%= f.label :password %></label>
    <div class="controls">
      <%= f.password_field :password %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <label class="checkbox">
        <% if devise_mapping.rememberable? -%>
          <div><%= f.check_box :remember_me %> <%= f.label "保持登录状态" %></div>
        <% end -%>
      </label>
      <%= f.submit "登录", :class => 'btn btn-primary' %>
    </div>
  </div>
  <% end %>
</div>
