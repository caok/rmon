<%- model_class = @info.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:location) %>:</strong></dt>
  <dd><%= @info.latitude %></dd>
  <dt><strong><%= model_class.human_attribute_name(:latitude) %>:</strong></dt>
  <dd><%= @info.longitude %></dd>
  <dt><strong><%= model_class.human_attribute_name(:latitude) %>:</strong></dt>
  <dd><%= @info.latitude %></dd>
  <dt><strong><%= model_class.human_attribute_name(:longitude) %>:</strong></dt>
  <dd><%= @info.longitude %></dd>
  <dt><strong><%= model_class.human_attribute_name(:temperature) %>:</strong></dt>
  <dd><%= @info.temperature %></dd>
  <dt><strong><%= model_class.human_attribute_name(:humidity) %>:</strong></dt>
  <dd><%= @info.humidity %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nitrogen) %>:</strong></dt>
  <dd><%= @info.nitrogen %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phosphoru) %>:</strong></dt>
  <dd><%= @info.phosphoru %></dd>
  <dt><strong><%= model_class.human_attribute_name(:potassium) %>:</strong></dt>
  <dd><%= @info.potassium %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @info.status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:happened_at) %>:</strong></dt>
  <dd><%= format_datetime @info.happened_at %></dd>
</dl>

<% if can? :manage, @info -%>
  <div class="form-actions">
    <%= link_to t('link.back', :default => t("helpers.links.back")),
                infos_path, :class => 'btn'  %>
    <%= link_to t('link.edit', :default => t("helpers.links.edit")),
                edit_info_path(@info), :class => 'btn' %>
    <%= link_to t('link.destroy', :default => t("helpers.links.destroy")),
                info_path(@info),
                :method => 'delete',
                :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                :class => 'btn btn-danger' %>
  </div>
<% end -%>
